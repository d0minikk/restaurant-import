<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'Menus', menus_path %></li>
  </ol>
</nav>

<div class="row justify-content-between">
  <div class="col-4">
    <h1>Menus</h1>
  </div>
</div>

<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Sponsor</th>
      <th scope="col">Event</th>
      <th scope="col">Venue</th>
      <th scope="col">Place</th>
      <th scope="col">Location</th>
      <th scope="col">Date</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= link_to menu.id, menu_path(menu) %></td>
        <td><%= menu.name %></td>
        <td><%= menu.sponsor.try(:name) %></td>
        <td><%= menu.event.try(:name) %></td>
        <td><%= menu.venue.try(:name) %></td>
        <td><%= menu.place.try(:name) %></td>
        <td><%= menu.location.try(:name) %></td>
        <td><%= menu.date %></td>
        <td><%= menu.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @menus %>
